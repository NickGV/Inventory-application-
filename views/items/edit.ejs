<h1>Editar Item: <%= item.name %></h1>
<form action="/items/<%= item.id %>?_method=PUT" method="POST">
  <div>
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" value="<%= item.name %>" required>
  </div>
  <div>
    <label for="description">Descripción:</label>
    <textarea id="description" name="description" required><%= item.description %></textarea>
  </div>
  <div>
    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" step="0.01" value="<%= item.price %>" required>
  </div>
  <div>
    <label for="categoryId">Categoría:</label>
    <select id="categoryId" name="categoryId" required>
      <% categories.forEach(function(category) { %>
        <option value="<%= category.id %>" <%= item.categoryId === category.id ? 'selected' : '' %>><%= category.name %></option>
      <% }); %>
    </select>
  </div>
  <button type="submit">Actualizar Item</button>
</form>
<a href="/items/<%= item.id %>">Cancelar</a>

